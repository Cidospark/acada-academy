@model Session
@{
    ViewBag.Title = "Edit Session";
}


<div class="row">

    <div class="col-md-6 col-md-offset-3">

        <h3 class="page-title">@ViewBag.Title</h3>

        <form method="post">
            <span asp-validation-summary="ModelOnly"></span>
            <input hidden asp-for="SessionId" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" id="fname" class="form-control" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit Session" class="btn btn-success" asp-action="EditSession" asp-controller="Adminstration" />
            </div>
        </form>
    </div>

</div>